{
    "name": "browser-storage-adapter",
    "version": "1.1.2",
    "description": "Browser storage adapter to crud 1-n different stores simultaneously",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/browser-storage-adapter.git"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "pub": "npm run build && np --no-2fa"
    },
    "keywords": [
        "browser",
        "cookie",
        "local-storage",
        "session-storage"
    ],
    "license": "MIT",
    "dependencies": {
        "cookie-es": "^0.5.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "@swc/core": "^1.3.32",
        "@tada5hi/eslint-config-typescript": "^1.1.4",
        "@tada5hi/tsconfig": "^0.4.0",
        "@types/node": "^20.1.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.34.0",
        "rimraf": "^4.1.2",
        "rollup": "^3.12.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
