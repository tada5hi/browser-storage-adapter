{
    "name": "browser-storage-adapter",
    "version": "1.0.3",
    "description": "Browser storage adapter to crud 1-n different stores simultaneously",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
