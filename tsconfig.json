{
    "extends": "@tada5hi/tsconfig",
    "compilerOptions": {
        "declarationDir": "dist",
        "lib": [
            "ESNext",
            "dom"
        ],
        "module": "ESNext",
        "target": "ESNext",

        "noUncheckedIndexedAccess": false,
        "noPropertyAccessFromIndexSignature": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ]
}
